<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity4"
    android:background="@drawable/fondooscuro">

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/imageView"
        android:layout_width="101dp"
        android:layout_height="48dp"
        android:layout_marginBottom="150dp"
        app:srcCompat="@drawable/flecha1"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="30dp"
            android:layout_height="70dp"
            android:paddingTop="35dp"
            android:background="#25E85C"/>

        <TextView
            android:layout_width="8dp"
            android:layout_height="70dp"
            android:paddingTop="35dp"
            android:background="#D5B7AE"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="00:08 / 03:34"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:paddingTop="10dp"
            android:background="#2A2D3A"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="200dp">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="60dp"
            app:srcCompat="@android:drawable/ic_menu_rotate"
            tools:ignore="SpeakableTextPresentCheck"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="76dp"
            android:layout_height="71dp"
            android:layout_marginLeft="50dp"
            android:outlineAmbientShadowColor="@color/teal_700"
            app:srcCompat="@android:drawable/ic_media_pause"
            tools:ignore="SpeakableTextPresentCheck"/>

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"
            app:srcCompat="@android:drawable/ic_media_next"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Re-record"
            android:textColor="@color/white"
            android:layout_marginLeft="60dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Step"
            android:textColor="@color/white"
            android:layout_marginLeft="166dp"/>

    </LinearLayout>

</LinearLayout>